{% extends 'base.html.twig' %}

{% block title %}Nous contacter !{% endblock %}


{% block body %}
    <div class="container" id="txt-center">
        <p>
        <h3 class="text-light text-center mt-4z col-md-4 m-auto" id="navbarsackola">Veillez nous contacter ici !</h3>

        </p>
        {% if notify %}
            <div class="alert alert-info">
                {{ notify }}
                <hr>
            </div>
        {% endif %}
        <div class="col-md-4 m-auto card-header">
            {{ form_start(form, {action:path('contact'), 'id':'navbarsackola'}) }}
            {{ form_widget(form) }}

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
