{% extends '/base.html.twig' %}
{% block title %}Utilisateurs!{% endblock %}
{% block body %}
    {% for label, messages in app.flashes %}
        <div class="container mt-5 mb-2">
            <div class="alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw}}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
    <div class="container">
        <h1 class="text-light text-center col-md-4 m-auto" id="navbarsackola">Espace utilisateur</h1><br>
        <h1 class="text-center">
            {% if is_granted('ROLE_ADMIN')%}
                <p class="h6 account-item"><a href="/admin">
                        <i class="fas fa-users-cog fa-2x"></i><br>
                        Accéder au backoffice</a></p>
            {% endif %}
        </h1>

        {% set fullname = app.user.firstname  %}
        <p>Bienvenue <strong>{{ fullname }}</strong> dans votre compte !</p>

        <p>C'est dans cet espace que allez pouvoir gérer vos informations personnelles !</p>
         <hr>
        <div class="row">
            <div class="col-md-4">
                <div class="account-item text-center">
                    <a href="{{ path('account_password') }}">
                        <i class="fas fa-lock fa-2x"></i><br>
                        Modifier mon mot de passe</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <a href="{{ path('account_adress') }}">
                        <i class="fas fa-address-book fa-2x"></i><br>
                        Gérer mes adresses</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <a href="{{ path('mes_commandes') }}">
                        <i class="fas fa-shopping-bag fa-2x"></i><br>
                        Mes commandes</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
